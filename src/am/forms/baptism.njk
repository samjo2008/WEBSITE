<div class="service-wrapper">
  <div class="service-content">

    <h1>የጥምቀት መመዝገቢያ</h1>
    <h2>የማስረጃ ጥያቄ (ጥምቀት / ጋብቻ / አባልነት)</h2>

    <section class="form-card">
      <h3>የማስረጃ ጥያቄ መላክ</h3>
      <p class="subtext">የጥምቀት፣ የጋብቻ ወይም የአባልነት ማስረጃ ይጠይቁ።</p>

      <form class="styled-form" method="post" action="/api/requests/certificates" enctype="multipart/form-data">

        <!-- Requester -->
        <div class="two-col">
          <div>
            <label for="cr-first-name">የጠያቂ ስም (የመጀመሪያ) *</label>
            <input id="cr-first-name" name="first_name" type="text" required>
          </div>
          <div>
            <label for="cr-last-name">የጠያቂ የአባት ስም *</label>
            <input id="cr-last-name" name="last_name" type="text" required>
          </div>
        </div>

        <div class="two-col">
          <div>
            <label for="cr-email">ኢሜይል *</label>
            <input id="cr-email" name="email" type="email" required>
          </div>
          <div>
            <label for="cr-phone">ስልክ ቁጥር</label>
            <input id="cr-phone" name="phone" type="tel" placeholder="+32…">
          </div>
        </div>

        <!-- Certificate type -->
        <label for="cr-type">የማስረጃ አይነት *</label>
        <select id="cr-type" name="certificate_type" required>
          <option value="">ይምረጡ…</option>
          <option value="baptism">ጥምቀት</option>
          <option value="marriage">ጋብቻ</option>
          <option value="membership">አባልነት</option>
        </select>

        <!-- Person(s) -->
        <label for="cr-person">በማስረጃው ላይ የሚታዩ ስሞች * <span class="am">(ስም)</span></label>
        <input id="cr-person" name="person_names" type="text" placeholder="ሙሉ ስም(ሞች)" required>

        <div class="three-col">
          <div>
            <label for="cr-event-date">የክስተቱ ቀን</label>
            <input id="cr-event-date" name="event_date" type="date">
          </div>
          <div>
            <label for="cr-event-place">ቦታ / ቤተክርስቲያን</label>
            <input id="cr-event-place" name="event_place" type="text" placeholder="Church / Parish">
          </div>
          <div>
            <label for="cr-book-ref">መጽሐፍ / ማጣቀሻ</label>
            <input id="cr-book-ref" name="book_ref" type="text" placeholder="መጽሐፍ፣ ገፅ ወይም ማጣቀሻ">
          </div>
        </div>

        <!-- Copies / Delivery -->
        <div class="three-col">
          <div>
            <label for="cr-copies">ቁጥር *</label>
            <input id="cr-copies" name="copies" type="number" min="1" step="1" value="1" required>
          </div>
          <div>
            <label for="cr-delivery">የመላኪያ መንገድ *</label>
            <select id="cr-delivery" name="delivery" required>
              <option value="pickup">በቤተክርስቲያን መቀበል</option>
              <option value="email">ኢሜይል (PDF)</option>
              <option value="post">ፖስታ</option>
            </select>
          </div>
          <div>
            <label for="cr-purpose">ዓላማ</label>
            <select id="cr-purpose" name="purpose">
              <option value="">ይምረጡ…</option>
              <option value="immigration">የስደት ጉዳይ</option>
              <option value="school">ትምህርት</option>
              <option value="record">ማስታወሻ / መዝገብ</option>
              <option value="other">ሌላ</option>
            </select>
          </div>
        </div>

        <label for="cr-mailing">የመላኪያ አድራሻ (ከፖስታ ከተመረጠ ብቻ)</label>
        <input id="cr-mailing" name="mailing_address" type="text" placeholder="መንገድ፣ ከተማ፣ ፖስታ ኮድ፣ አገር">

        <!-- Attachment -->
        <label for="cr-attachment">ተቀማጭ ሰነድ (መታወቂያ / ማረጋገጫ ካስፈለገ)</label>
        <input id="cr-attachment" name="attachment" type="file" accept=".pdf,.jpg,.jpeg,.png">

        <!-- Notes -->
        <label for="cr-notes">ተጨማሪ መረጃ</label>
        <textarea id="cr-notes" name="notes" rows="3" placeholder="ተጨማሪ መረጃ…"></textarea>

        <!-- Consent -->
        <div class="consent">
          <label><input type="checkbox" name="privacy_consent" required> ለዚህ ጥያቄ የተሰጠው መረጃ እንዲተካ እስማማለሁ።</label>
        </div>

        <div class="form-actions">
          <button class="btn-primary" type="submit">ጥያቄውን ያቅርቡ</button>
        </div>

      </form>
    </section>

    <div class="footer-spacer" aria-hidden="true"></div>

  </div>
</div>


