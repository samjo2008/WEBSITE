<section class="ministry-wrapper">
  <div class="ministry-content library-content">

    <h1>Digital Library</h1>
    <p class="scripture">
      ‚ÄúGive attention to reading, to exhortation, to doctrine.‚Äù<br>
      <span class="scripture-ref">‚Äî 1 Timothy 4:13</span>
    </p>

    <!-- Religion Books for Adults -->
    <section>
      <h2>üìö Religion Books for Adults</h2>
      

<div class="book-grid">
  {% for b in collections.religionAdults %}
    <article class="book">
      {# Try to load a thumbnail next to the PDF. If it fails, remove <img> and show icon. #}
      <a class="book-cover" href="{{ b.url }}" target="_blank" rel="noopener">
        {% set thumb = b.url | replace(".pdf", ".jpg") %}
        <img src="{{ thumb }}"
             alt="{{ b.name }} cover"
             onerror="this.parentElement.classList.add('no-thumb'); this.remove();">
        <span class="book-icon">üìï</span>
      </a>

      <h3 class="book-title">{{ b.name }}</h3>
      <p class="book-meta">PDF ¬∑ {{ b.sizeMB }} MB</p>

      <div class="book-actions">
        <a class="btn view" href="{{ b.url }}" target="_blank" rel="noopener">View</a>
        <a class="btn download" href="{{ b.url }}" download>Download</a>
      </div>
    </article>
  {% endfor %}
  {% if collections.religionAdults | length == 0 %}
    <p class="empty">No books uploaded yet.</p>
  {% endif %}
</div>

