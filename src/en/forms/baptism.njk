<div class="service-wrapper">
  <div class="service-content">

    <h1>Baptism Registration</h1>
    <h2>የማስረጃ ጥያቄ (ጥምቀት / ጋብቻ / አባልነት)</h2>

    <section class="form-card">
      <h3>Request a Certificate</h3>
      <p class="subtext">Request Baptism, Marriage, or Membership certificates. የውቅር ማስረጃ ይጠይቁ።</p>

      <form class="styled-form" method="post" action="/api/requests/certificates" enctype="multipart/form-data">
        <!-- Requester -->
        <div class="two-col">
          <div>
            <label for="cr-first-name">Requester First Name *</label>
            <input id="cr-first-name" name="first_name" type="text" required>
          </div>
          <div>
            <label for="cr-last-name">Requester Last Name *</label>
            <input id="cr-last-name" name="last_name" type="text" required>
          </div>
        </div>

        <div class="two-col">
          <div>
            <label for="cr-email">Email *</label>
            <input id="cr-email" name="email" type="email" required>
          </div>
          <div>
            <label for="cr-phone">Phone</label>
            <input id="cr-phone" name="phone" type="tel" placeholder="+32…">
          </div>
        </div>

        <!-- Certificate type -->
        <label for="cr-type">Certificate Type *</label>
        <select id="cr-type" name="certificate_type" required>
          <option value="">Select…</option>
          <option value="baptism">Baptism</option>
          <option value="marriage">Marriage</option>
          <option value="membership">Membership</option>
        </select>

        <!-- Person(s) and details -->
        <label for="cr-person">Person(s) on Certificate * <span class="am">(ስም)</span></label>
        <input id="cr-person" name="person_names" type="text" placeholder="Full name(s)" required>

        <div class="three-col">
          <div>
            <label for="cr-event-date">Event Date</label>
            <input id="cr-event-date" name="event_date" type="date">
          </div>
          <div>
            <label for="cr-event-place">Event Church / Place</label>
            <input id="cr-event-place" name="event_place" type="text" placeholder="Church / Parish">
          </div>
          <div>
            <label for="cr-book-ref">Book / Reference</label>
            <input id="cr-book-ref" name="book_ref" type="text" placeholder="Book, page or ref">
          </div>
        </div>

        <!-- Copies / Delivery -->
        <div class="three-col">
          <div>
            <label for="cr-copies">No. of Copies *</label>
            <input id="cr-copies" name="copies" type="number" min="1" step="1" value="1" required>
          </div>
          <div>
            <label for="cr-delivery">Delivery Method *</label>
            <select id="cr-delivery" name="delivery" required>
              <option value="pickup">Pickup</option>
              <option value="email">Email (PDF)</option>
              <option value="post">Postal Mail</option>
            </select>
          </div>
          <div>
            <label for="cr-purpose">Purpose</label>
            <select id="cr-purpose" name="purpose">
              <option value="">Select…</option>
              <option value="immigration">Immigration</option>
              <option value="school">School</option>
              <option value="record">Record Keeping</option>
              <option value="other">Other</option>
            </select>
          </div>
        </div>

        <label for="cr-mailing">Mailing Address (if Postal)</label>
        <input id="cr-mailing" name="mailing_address" type="text" placeholder="Street, City, Postal Code, Country">

        <!-- Attachment (ID, proof) -->
        <label for="cr-attachment">Attachment (ID/Proof as needed)</label>
        <input id="cr-attachment" name="attachment" type="file" accept=".pdf,.jpg,.jpeg,.png">

        <!-- Notes -->
        <label for="cr-notes">Notes</label>
        <textarea id="cr-notes" name="notes" rows="3" placeholder="Additional information…"></textarea>

        <!-- Consent -->
        <div class="consent">
          <label><input type="checkbox" name="privacy_consent" required> I agree to data processing for this request.</label>
        </div>

        <div class="form-actions">
          <button class="btn-primary" type="submit">Submit Request</button>
        </div>
      </form>
    </section>

    <div class="footer-spacer" aria-hidden="true"></div>
  </div>
</div>

