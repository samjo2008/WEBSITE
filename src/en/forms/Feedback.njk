<div class="service-wrapper">
  <div class="service-content">

    <h1>Feedback / Suggestions / Complaints</h1>
    <h2>አስተያየት / ምክር / ቅሬታ</h2>

    <section class="form-card">
      <h3>Share Your Thoughts</h3>
      <p class="subtext">Speak to the pastoral team. ከመንፈሳዊ አስተዳዳሪ ጋር ይነጋገሩ።</p>

      <form class="styled-form" method="post" action="/api/feedback">
        <div class="two-col">
          <div>
            <label for="fb-name">Your Name</label>
            <input id="fb-name" name="name" type="text" placeholder="Optional">
          </div>
          <div>
            <label for="fb-email">Email</label>
            <input id="fb-email" name="email" type="email" placeholder="Optional">
          </div>
        </div>

        <label for="fb-category">Category *</label>
        <select id="fb-category" name="category" required>
          <option value="">Select…</option>
          <option value="feedback">General Feedback</option>
          <option value="suggestion">Suggestion</option>
          <option value="complaint">Complaint</option>
          <option value="prayer">Prayer Request</option>
          <option value="pastoral-care">Pastoral Care</option>
        </select>

        <label for="fb-subject">Subject *</label>
        <input id="fb-subject" name="subject" type="text" required>

        <label for="fb-message">Message *</label>
        <textarea id="fb-message" name="message" rows="5" required></textarea>

        <div class="two-col">
          <div>
            <label for="fb-contact-pref">Preferred Contact</label>
            <select id="fb-contact-pref" name="contact_preference">
              <option value="">No follow-up</option>
              <option value="email">Email</option>
              <option value="phone">Phone</option>
            </select>
          </div>
          <div>
            <label for="fb-rating">Experience Rating</label>
            <select id="fb-rating" name="rating">
              <option value="">N/A</option>
              <option value="5">Excellent</option>
              <option value="4">Good</option>
              <option value="3">Average</option>
              <option value="2">Poor</option>
              <option value="1">Very Poor</option>
            </select>
          </div>
        </div>

        <label><input type="checkbox" name="follow_up_ok"> I’m happy to be contacted about this submission.</label>

        <div class="form-actions">
          <button class="btn-primary" type="submit">Send</button>
        </div>
      </form>
    </section>

    <div class="footer-spacer" aria-hidden="true"></div>
  </div>
</div>

