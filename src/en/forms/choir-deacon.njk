<div class="service-wrapper">
  <div class="service-content">

    <h1>Choir / Deacon / Volunteer Signup</h1>
    <h2>የኮየር / ዲያቆን / በጎ ፈቃደኛ መመዝገብ</h2>

    <section class="form-card">
      <h3>Join a Serving Team</h3>
      <p class="subtext">በአገልግሎት ቡድን ይቀላቀሉ።</p>

      <form class="styled-form" method="post" action="/api/registration/choir-volunteer">
        <!-- Name -->
        <label for="cv-first-name">First Name * <span class="am">(ስም)</span></label>
        <input id="cv-first-name" name="first_name" type="text" required>

        <label for="cv-last-name">Last Name * <span class="am">(የአባት ስም)</span></label>
        <input id="cv-last-name" name="last_name" type="text" required>

        <!-- Contact -->
        <div class="two-col">
          <div>
            <label for="cv-email">Email * <span class="am">(ኢሜይል)</span></label>
            <input id="cv-email" name="email" type="email" required>
          </div>
          <div>
            <label for="cv-phone">Phone <span class="am">(ስልክ)</span></label>
            <input id="cv-phone" name="phone" type="tel" placeholder="+32…">
          </div>
        </div>

        <!-- Address -->
        <label for="cv-address1">Address</label>
        <input id="cv-address1" name="address1" type="text" placeholder="Address 1">
        <input name="address2" type="text" placeholder="Address 2">

        <div class="three-col">
          <input name="city" type="text" placeholder="City">
          <input name="state" type="text" placeholder="State/Province">
          <input name="postal_code" type="text" placeholder="Zip/Postal Code">
        </div>
        <input name="country" type="text" placeholder="Country" value="Belgium">

        <!-- Role selection -->
        <label for="cv-role">Role Applying For * <span class="am">(ክፍል)</span></label>
        <select id="cv-role" name="role" required>
          <option value="">Select…</option>
          <option value="choir">Choir</option>
          <option value="deacon">Deacon (ዲያቆን)</option>
          <option value="volunteer">Volunteer</option>
        </select>

        <!-- Choir specifics -->
        <div class="two-col">
          <div>
            <label for="cv-voice">Voice (Choir)</label>
            <select id="cv-voice" name="choir_voice">
              <option value="">N/A</option>
              <option value="soprano">Soprano</option>
              <option value="alto">Alto</option>
              <option value="tenor">Tenor</option>
              <option value="bass">Bass</option>
            </select>
          </div>
          <div>
            <label for="cv-experience">Experience (years)</label>
            <input id="cv-experience" name="experience_years" type="number" min="0" step="1" placeholder="0">
          </div>
        </div>

        <!-- Volunteer areas -->
        <label>Volunteer Areas (select all that apply)</label>
        <div class="checkbox-grid">
          <label><input type="checkbox" name="volunteer_areas" value="ushering"> Ushering</label>
          <label><input type="checkbox" name="volunteer_areas" value="hospitality"> Hospitality</label>
          <label><input type="checkbox" name="volunteer_areas" value="cleaning"> Cleaning</label>
          <label><input type="checkbox" name="volunteer_areas" value="media"> Media / Streaming</label>
          <label><input type="checkbox" name="volunteer_areas" value="sunday-school"> Sunday School Aid</label>
          <label><input type="checkbox" name="volunteer_areas" value="youth"> Youth Ministry</label>
        </div>

        <!-- Availability -->
        <label for="cv-availability">Availability</label>
        <textarea id="cv-availability" name="availability" rows="3" placeholder="Days/times you are available…"></textarea>

        <!-- Emergency Contact -->
        <div class="two-col">
          <div>
            <label for="cv-emerg-name">Emergency Contact</label>
            <input id="cv-emerg-name" name="emergency_name" type="text" placeholder="Name">
          </div>
          <div>
            <label for="cv-emerg-phone">Emergency Phone</label>
            <input id="cv-emerg-phone" name="emergency_phone" type="tel" placeholder="+32…">
          </div>
        </div>

        <!-- Consent -->
        <div class="consent">
          <label>
            <input type="checkbox" name="privacy_consent" required>
            I agree to the church’s privacy notice & data processing. <span class="am">(የግል መረጃ አስተዳደር እጽድቅ)</span>
          </label>
        </div>

        <div class="form-actions">
          <button class="btn-primary" type="submit">Submit Signup</button>
        </div>
      </form>
    </section>

    <div class="footer-spacer" aria-hidden="true"></div>
  </div>
</div>

