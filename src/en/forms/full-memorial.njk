      <input type="tel" required>

      <!-- Cell Phone -->
      <label>
        Cell Phone of the Person Requesting the Service *
        <span class="am"> (ሞባይል) </span>
      </label>
      <input type="tel" required>

      <!-- Email -->
      <label>
        Email of the Person Requesting the Service *
        <span class="am"> (ኢሜይል) </span>
      </label>
      <input type="email" required>

